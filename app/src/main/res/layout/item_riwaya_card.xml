<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:app="http://schemas.android.com/apk/res-auto"
	 xmlns:tools="http://schemas.android.com/tools"
	 android:id="@+id/riwayaCard"
	 android:layout_width="wrap_content"
	 android:layout_height="wrap_content"
	 android:layout_margin="@dimen/layout_margin_5dp"
	 android:elevation="@dimen/elevation_5dp"
	 app:cardCornerRadius="@dimen/radius_5dp"
	 app:cardElevation="@dimen/elevation_5dp"
	 app:cardMaxElevation="@dimen/elevation_5dp"
	 app:contentPadding="@dimen/padding_10dp">

	 <androidx.constraintlayout.widget.ConstraintLayout
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content">

		  <androidx.cardview.widget.CardView
			   android:layout_width="wrap_content"
			   android:layout_height="wrap_content"
			   android:id="@+id/card_imgPlayer"
			   app:cardCornerRadius="@dimen/radius_40dp"
			   android:elevation="@dimen/elevation_5dp"
			   app:layout_constraintEnd_toEndOf="parent"
			   app:layout_constraintStart_toStartOf="parent"
			   app:layout_constraintTop_toTopOf="parent"
			   >
			   <ImageView
					android:id="@+id/img_RiwayaCard"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/layout_height_200dp"
					android:scaleType="centerCrop"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:srcCompat="@drawable/sheikh2" />

		  </androidx.cardview.widget.CardView>

		  <LinearLayout
			   android:layout_width="@dimen/layout_width_zero"
			   android:layout_height="wrap_content"
			   android:orientation="vertical"
			   android:padding="@dimen/padding_10dp"
			   app:layout_constraintBottom_toBottomOf="parent"
			   app:layout_constraintEnd_toEndOf="@+id/card_imgPlayer"
			   app:layout_constraintStart_toStartOf="@+id/card_imgPlayer"
			   app:layout_constraintTop_toBottomOf="@+id/card_imgPlayer">

			   <TextView
					android:id="@+id/txtName_RiwayaCard"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="start|left"
					android:text="TextView"
					android:textColor="@color/error_color"
					android:textSize="16sp"
					android:textStyle="bold" />

			   <TextView
					android:id="@+id/txtNameSheikh_RiwayaCard"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="start|left"
					android:layout_marginTop="@dimen/layout_margin_5dp"
					android:layout_weight="1"
					android:text="TextView"
					android:textColor="@color/error_color"
					android:textSize="15sp" />

			   <TextView
					android:id="@+id/txtyear_RiwayaCard"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right|end"
					android:layout_marginTop="@dimen/layout_margin_5dp"
					android:layout_weight="1"
					android:gravity="center|end"
					android:text="TextView"
					android:textColor="@color/about_us_SubText"
					android:textSize="13sp" />
		  </LinearLayout>
	 </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>